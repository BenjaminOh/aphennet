# 애플리케이션 환경 설정
APP_ENV=development
NODE_ENV=development

# 포트 설정
REACT_EXPOSE_PORT=3000
REACT_CONTAINER_PORT=3000
NODE_EXPOSE_PORT=3001
NODE_CONTAINER_PORT=3000
NGINX_EXPOSE_PORT=80

# API URL 설정
API_URL=http://localhost:3001

# Next.js 환경 변수
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_SITE_ID=aphennet
NEXT_PUBLIC_MAINT_NAME=Aphennet
NEXT_PUBLIC_ENCRYPTION_KEY=your_encryption_key_here

# 데이터베이스 설정 (MariaDB)
DB_HOST=mariadb
DB_PORT=3306
DB_NAME=aphennet_db
DB_USER=aphennet_user
DB_PASS=aphennet_password

# JWT 설정
SECRETKEY=your_jwt_secret_key_here
REFRESHSECRETKEY=your_refresh_secret_key_here
ALG=HS256
EXP=1h
REFRESHEXP=7d
ISS=aphennet

# 유지보수용 데이터베이스 설정 (MSSQL - 선택사항)
LW_HOST=your_mssql_host
LW_PORT=1433
LW_NAME=your_mssql_db
LW_USER=your_mssql_user
LW_PASS=your_mssql_password
